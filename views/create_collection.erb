<% if session.key?("last_err") %>
	<div class="alert-message error fade in" data-alert="alert">
		<a class="close" href="#">&times;</a>
		<p>
			<%= session["last_err"] %>
		</p>
	</div>
	<% session.delete("last_err") %>
<% end %>

<form action="/app/<%= @app_id %>/collections/create" method="post" class="form-stacked">
	<fieldset>
		<legend>Create collection</legend>
		<div class="clearfix"> 
			<label for="collection">Collection name</label> 
			<div class="input"> 
				<input class="xlarge" id="collection" name="collection" size="30" type="text" /> 
			</div> 
		</div>

		<div class="actions"> 
			<input type="submit" class="btn primary" value="Add collection">
		</div>

	</fieldset>
</form>
