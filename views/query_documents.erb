<% if session.key?("last_err") %>
	<div class="alert-message error fade in" data-alert="alert">
		<a class="close" href="#">&times;</a>
		<p>
			<%= session["last_err"] %>
		</p>
	</div>
	<% session.delete("last_err") %>
<% end %>


<ul class="breadcrumb">
	<li><a href="/dashboard">Dashboard</a> <span class="divider">/</span></li>
	<li><a href="/collection/list/<%= @app_id %>"><%= @app_name %></a> <span class="divider">/</span></li>
	<li class="active"><a href="/documents/query/<%= @app_id %>/<%= @collection %>"><%= @collection %></li>
</ul>

<a class="btn primary" href="/app/<%= @app_id %>/collections/<%= @collection %>/doc/create" style="margin-bottom: 15px;">Create document</a>

<table class="zebra-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Document</th>
		</tr>
	</thead>
	<tbody>
		<% @documents.each { |document| %>
			<tr>
				<td>
					<%= document["_id"] %>
				</td>
				<td>
					<pre>
						<%= JSON.pretty_generate(document) %>
					</pre>
				</td>
			</tr>
		<%} %>
	</tbody>
</table>
